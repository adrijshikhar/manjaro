     client.unfocused        #00000F #00000F #ffffff #454948
     client.urgent           #268BD2 #268BD2 #001C47 #268BD2
     client.placeholder      #000000 #0c0c0c #ffffff #000000 


    client.background       #242424

    ##STOP THEMING WM


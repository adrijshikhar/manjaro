#####################################################################################################################
#################                          variety for your wallpapers                              #################
#####################################################################################################################


#Variety keybindings $alt = ALT
# trash wallpaper
bindsym $alt+t exec --no-startup-id variety -t
# next wallpaper
bindsym $alt+n exec --no-startup-id variety -n
bindsym $alt+Right exec --no-startup-id variety -n
# previous wallpaper
bindsym $alt+p exec --no-startup-id variety -p
bindsym $alt+Left exec --no-startup-id variety -p
# favorite wallpaper
bindsym $alt+f exec --no-startup-id variety -f
# pause wallpaper
bindsym $alt+Up exec --no-startup-id variety --pause
# resume wallpaper
bindsym $alt+Down exec --no-startup-id variety --resume


#####################################################################################################################
#################                          variety with pywal for your wallpapers                   #################
#####################################################################################################################

# next wallpaper
bindsym $alt+Shift+n exec --no-startup-id variety -n && wal -i $(cat $HOME/.config/variety/wallpaper/wallpaper.jpg.txt)&
# previous wallpaper
bindsym $alt+Shift+p exec --no-startup-id variety -p && wal -i $(cat $HOME/.config/variety/wallpaper/wallpaper.jpg.txt)&
# trash wallpaper
bindsym $alt+Shift+t exec --no-startup-id variety -t && wal -i $(cat $HOME/.config/variety/wallpaper/wallpaper.jpg.txt)&
# Update Wallpaper
bindsym $alt+Shift+u exec --no-startup-id wal -i $(cat $HOME/.config/variety/wallpaper/wallpaper.jpg.txt)


